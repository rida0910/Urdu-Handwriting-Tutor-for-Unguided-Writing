<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity">

    <TextView
        android:id="@+id/feedbacktxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="128dp"/>


    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:isIndicator="true"
        android:max="5"
        android:numStars="5"
        android:padding="0dp"
        android:rating="4"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:stepSize="1"
        android:layout_below="@+id/feedbacktxt"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/scoretxt"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="350dp"
        android:layout_marginRight="350dp"
        android:layout_marginTop="64dp"
        android:text="score"
        android:textSize="32sp"
        android:layout_below="@id/rating"
        android:background="@drawable/rounded_corner_textview"
        android:gravity="center"
        android:textColor="@color/mycolor"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="64dp"
        android:layout_marginLeft="64dp"
        android:textSize="32sp"
        android:layout_marginTop="64dp"
        android:layout_below="@id/scoretxt" />



    <Button
        android:id="@+id/nextbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/greencolorrounded_button"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_above="@id/completebtn"
        android:onClick="next"/>

    <Button
        android:id="@+id/completebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:background="@drawable/rounded_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:textColor="#fff"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:onClick="complete"/>


</RelativeLayout>