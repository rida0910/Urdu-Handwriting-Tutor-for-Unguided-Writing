    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.urduhandwritingtutor.ui.home.HomeFragment"
        android:label="Urdu Handwriting Tutor"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_evaluations"
        android:name="com.example.urduhandwritingtutor.ui.evaluations"
        android:label="Evaluations"
        tools:layout="@layout/fragment_evaluations" />

    <fragment
        android:id="@+id/nav_quiz"
        android:name="com.example.urduhandwritingtutor.ui.slideshow.SlideshowFragment"
